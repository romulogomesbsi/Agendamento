<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="Ambiente:"
            android:layout_marginLeft="10dp"
            android:textColor="@color/colorBlack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"></TextView>
        <TextView
            android:text="Ambiente: Salão de Festas"
            android:id="@+id/txt_reserva_ambiente"
            android:layout_marginLeft="10dp"
            android:textColor="@color/colorBlack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></TextView>


    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="Data de Criação:"
            android:layout_marginLeft="10dp"
            android:textSize="12dp"
            android:textColor="@color/colorBlack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="normal"></TextView>
        <TextView
            android:id="@+id/txt_reserva_data_criacao"
            android:text="22/09/2020 15:30"
            android:layout_marginLeft="10dp"
            android:textSize="12dp"
            android:textColor="@color/colorBlack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></TextView>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="Data Agendada:"
            android:layout_marginLeft="10dp"
            android:textSize="12dp"
            android:textColor="@color/colorBlack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="normal"></TextView>
        <TextView
            android:id="@+id/txt_reserva_data_agendada"
            android:text="22/09/2020 15:30"
            android:layout_marginLeft="10dp"
            android:textSize="12dp"
            android:textColor="@color/colorBlack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="Duração da Reserva:"
            android:layout_marginLeft="10dp"
            android:textSize="12dp"
            android:textColor="@color/colorBlack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="normal"></TextView>
        <TextView
            android:id="@+id/txt_reserva_duracao"
            android:text="3 Horas"
            android:layout_marginLeft="10dp"
            android:textSize="12dp"
            android:textColor="@color/colorBlack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></TextView>

    </LinearLayout>



</LinearLayout>